<%= form_for :article, url: articles_path, html: { multipart: true } do |f| %>
  
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, size:"30" %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, size:"100" %>
  </p>

  <p>
    <%= f.label :all_tags %><br>
    <%= f.text_field :all_tags, size:"30", placeholder: "Tags separated with comma" %>
  </p>

  <p>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
