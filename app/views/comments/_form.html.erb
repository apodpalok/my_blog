<div class="well">
  <h4>Leave a Comment:</h4>
  <div class="form-group">
    <%= form_for([@article, @article.comments.build]) do |f| %>
        <p>
          <%= f.label :commenter %><br>
          <%= f.text_field :commenter %>
        </p>

        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body, size:"100" %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
  </div>
</div>

